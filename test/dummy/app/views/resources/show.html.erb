<h2>Resource: <%= @resource.title %></h2>
<dl class="dl-horizontal">
  <dt>Sub Title</dt>
  <dd><%= @resource.subtitle %></dd>
  <dt>Keyword</dt>
  <dd><%= Keyword.find(@resource.keyword_id).title if Keyword.exists?(id: @resource.keyword_id) %></dd>
  <dt>Author</dt>
  <dd><%= @resource.author %></dd>
  <dt>Produced By</dt>
  <dd><%= @resource.producedby %></dd>
  <dt>Edition</dt>
  <dd><%= @resource.edition %></dd>
  <dt>Description</dt>
  <dd><%= @resource.description %></dd>
  <dt>Series</dt>
  <dd><%= @resource.series %></dd>
  <dt>Control Number</dt>
  <dd><%= @resource.controlno %></dd>
  <dt>Publisher</dt>
  <dd><%= @resource.publisher %></dd>
  <dt>Publish Date</dt>
  <dd><%= l(@resource.publishdate) if !@resource.publishdate.nil? %></dd>
</dl>

<%= link_to 'Edit', edit_resource_path(@resource), :class => "btn btn-primary", :role =>"button" %>
<%= link_to 'Back', resources_path, :class => "btn btn-default", :role =>"button" %>
<%= link_to 'Delete', @resource, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default", :role =>"button" %>